---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Servicios Generales Pro - Soluciones integrales para hogares y empresas", image = "/assets/images/og-image.jpg" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" onerror="this.href='https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/favicon.png'" />
    <link rel="shortcut icon" href="/favicon.png" onerror="this.href='https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/favicon.png'" />
    <link rel="apple-touch-icon" href="/favicon.png" onerror="this.href='https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/favicon.png'" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Styles -->
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="/animations.css" />
    <link rel="stylesheet" href="/components.css" />
    <!-- Tailwind CSS with fallback -->
    <link rel="stylesheet" href="/tailwind.css" />
  </head>
  <body class="font-sans antialiased">
    <slot />
    
    <!-- Scripts -->
    <script>
      // Load CSS fallbacks
      document.addEventListener('DOMContentLoaded', function() {
        const cssFiles = [
          { local: '/global.css', fallback: 'https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/global.css' },
          { local: '/animations.css', fallback: 'https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/animations.css' },
          { local: '/components.css', fallback: 'https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/components.css' },
          { local: '/tailwind.css', fallback: 'https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/tailwind.css' }
        ];

        cssFiles.forEach(css => {
          fetch(css.local)
            .then(response => {
              if (!response.ok) {
                throw new Error('CSS not found');
              }
            })
            .catch(() => {
              // Load fallback CSS
              const link = document.createElement('link');
              link.rel = 'stylesheet';
              link.href = css.fallback;
              document.head.appendChild(link);
            });
        });
      });

      // Smooth scrolling para enlaces internos
      document.addEventListener('DOMContentLoaded', function() {
        const links = document.querySelectorAll('a[href^="#"]');
        links.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
