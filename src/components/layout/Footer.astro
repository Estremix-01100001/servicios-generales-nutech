---
import { companyInfo } from '../../database/data';
---

<footer class="bg-secondary-900 text-white">
  <div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-36 xl:px-44 2xl:px-52 py-8 sm:py-10 lg:py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3 mb-4">
          <img src={`${import.meta.env.BASE_URL}favicon.png`} alt="Nutech Logo" class="w-16 h-16 sm:w-12 sm:h-12" />
          <div>
            <h3 class="text-xl font-bold text-white">{companyInfo.name}</h3>
            <p class="text-sm text-emerald-400">Transformación Digital</p>
          </div>
        </div>
        <p class="text-gray-400 leading-relaxed text-sm">
          Especialistas en transformación digital, automatización de procesos (RPA) e inteligencia artificial para empresas.
        </p>
        <div class="flex space-x-4">
          <a href="https://www.linkedin.com/company/nutechglobal/" class="footer-link hover:text-blue-400 transition-colors" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="footer-section-title">Servicios</h3>
        <ul class="space-y-2">
          <li><a href="#crecimiento" class="footer-link">RPA y Automatización</a></li>
          <li><a href="#servicios-detallados" class="footer-link">Servicios Adicionales</a></li>
          <li><a href="#crecimiento" class="footer-link">Inteligencia Artificial</a></li>
          <li><a href="#crecimiento" class="footer-link">Transformación Digital</a></li>
          <li><a href="#servicios-detallados" class="footer-link">Consultoría Tecnológica</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="footer-section-title">Contacto</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-gray-400 text-sm">Av. Principal 123, Lima, Perú</p>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:+18135954933" class="footer-link text-sm">+1 (813) 595-4933</a>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:sfernandez@nutechcorp.com" class="footer-link text-sm">sfernandez@nutechcorp.com</a>
          </div>
        </div>
      </div>

      <!-- Business Hours -->
      <div>
        <h3 class="footer-section-title">Horarios</h3>
        <div class="space-y-2 text-sm">
          <div class="flex justify-between items-start">
            <span class="text-gray-400">Lun - Vie:</span>
            <span class="text-white text-right">8:30 AM - 6:30 PM</span>
          </div>
          <div class="flex justify-between items-start">
            <span class="text-gray-400">Sábado:</span>
            <span class="text-white text-right">9:30 AM - 4:30 PM</span>
          </div>
          <div class="flex justify-between items-start">
            <span class="text-gray-400">Domingo:</span>
            <span class="text-white text-right">Cerrado</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm">
          © 2025 {companyInfo.name}. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="footer-link">Política de Privacidad</a>
          <a href="#" class="footer-link">Términos de Servicio</a>
          <a href="#" class="footer-link">Cookies</a>
        </div>
      </div>
    </div>
  </div>
</footer>
