---
import { companyInfo } from '../../database/data';
import MotionNav from '../MotionNav';
import MotionLogo from '../MotionLogo';
import MotionMenuButton from '../MotionMenuButton';
---

<header class="bg-secondary-900/90 backdrop-blur-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <MotionLogo client:load />

      <!-- Desktop Navigation -->
      <MotionNav client:load />

      <!-- Mobile Menu Button -->
      <MotionMenuButton client:load />
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden hidden mt-4 pb-4 border-t border-white/20">
      <div class="flex flex-col space-y-3 pt-4">
        <a href="#inicio" class="nav-link text-base py-2">Inicio</a>
        <a href="#crecimiento" class="nav-link text-base py-2">Crecimiento</a>
        <a href="#servicios-detallados" class="nav-link text-base py-2">Servicios</a>
        <a href="#partners" class="nav-link text-base py-2">Partners</a>
        <a href="#nutech-info" class="nav-link text-base py-2">Nutech</a>
        <a href="#perspectiva" class="nav-link text-base py-2">Perspectiva</a>
        <a href="#contacto" class="nav-link text-base py-2">Contacto</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
