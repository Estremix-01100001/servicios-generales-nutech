---
import { services } from '../../database/data';
import InfiniteScroll from './InfiniteScroll.astro';
import ScrollReveal from '../animations/ScrollReveal.tsx';
import CardReveal from '../animations/CardReveal.tsx';
import OptimizedImage from '../OptimizedImage.astro';

const imageMap: { [key: string]: string } = {
  'Seguridad & Ciberseguridad': 'seguridad-ciberseguridad.jpg',
  'IT Staffing': 'it-staffing.jpg',
  'Desarrollo Web / Mobile': 'desarrollo-web-mobile.jpg',
  'Capacitación Ejecutiva': 'capacitacion-ejecutiva.jpg',
  'Consultoría Tecnológica': 'consultoria-tecnologica.jpg',
  'Análisis de Datos': 'analisis-datos.jpg'
};
---

<section id="servicios-detallados" class="py-12 sm:py-16 lg:py-24 bg-gradient-to-b from-white via-accent-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-36 xl:px-44 2xl:px-52">
    <!-- Section Badge -->
    <div class="text-center mb-8">
      <div class="group relative inline-flex items-center px-4 py-2 bg-gradient-to-br from-accent-100 to-accent-200 border-2 border-accent-300 rounded-full shadow-lg hover:shadow-2xl hover:shadow-accent-500/50 transition-all duration-500 hover:scale-110 overflow-hidden cursor-pointer">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
        <span class="relative text-accent-700 text-sm font-bold group-hover:text-accent-800 transition-colors duration-300">Servicios Adicionales</span>
      </div>
    </div>

    <!-- Section Header -->
    <ScrollReveal direction="up" delay={0} client:visible>
      <div class="text-center mb-8 sm:mb-10 lg:mb-12">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-secondary-800 mb-4 px-4">
          Soluciones complementarias
        </h2>
        <p class="text-lg md:text-xl text-secondary-600 max-w-4xl mx-auto px-4">
          Para potenciar tu transformación digital.
        </p>
      </div>
    </ScrollReveal>

    <!-- Services Scroll Infinito -->
    <ScrollReveal direction="up" delay={0.2} client:visible>
      <div class="max-w-xs md:max-w-none mx-auto">
        <InfiniteScroll speed="slow" direction="left">
      {services.map((service, index) => {
        const imageName = imageMap[service.name] || 'seguridad-ciberseguridad.jpg';
        
        return (
          <div class="group relative bg-gradient-to-br from-white to-accent-50 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 border-2 border-transparent hover:border-accent-200 min-w-[320px] max-w-[320px]">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent-200/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 z-10"></div>
            
            <!-- Service Image -->
            <div class="h-48 overflow-hidden">
              <OptimizedImage 
                src={`${import.meta.env.BASE_URL}images/${imageName}`}
                alt={service.name}
                className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            
            <!-- Service Content -->
            <div class="relative p-4 sm:p-5">
              <h3 class="text-lg font-bold text-secondary-800 mb-2 text-center group-hover:text-accent-700 transition-colors duration-300">
                {service.name}
              </h3>
              <p class="text-secondary-600 mb-3 text-center text-xs sm:text-sm">
                {service.description}
              </p>
              
              <!-- Features List -->
              <ul class="space-y-1.5">
                {service.features.map((feature) => (
                  <li class="flex items-start text-xs sm:text-sm">
                    <span class="text-accent-600 mr-2 mt-0.5">•</span>
                    <span class="text-secondary-600">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        );
      })}
        </InfiniteScroll>
      </div>
    </ScrollReveal>
  </div>
</section>
