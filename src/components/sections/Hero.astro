<script>
  document.addEventListener('DOMContentLoaded', () => {
    const letters = document.querySelectorAll('.letter');
    const letterDelay = 120; // velocidad de animación por letra
    const pauseBetweenCycles = 2000; // pausa entre ciclos
    
    function resetLetters() {
      letters.forEach(letter => {
        letter.className = 'letter bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent';
        letter.style.transition = 'all 0.3s ease';
      });
    }
    
    function animateLetters() {
      resetLetters();
      
      letters.forEach((letter, index) => {
        setTimeout(() => {
          letter.className = 'letter bg-gradient-to-r from-blue-300 to-blue-500 bg-clip-text text-transparent';
          letter.style.transform = 'scale(1.05)';
          letter.style.filter = 'brightness(1.2)';
        }, index * letterDelay);
      });
      
      // Reiniciar animación después de completar
      setTimeout(() => {
        letters.forEach(letter => {
          letter.style.transform = 'scale(1)';
          letter.style.filter = 'brightness(1)';
        });
        setTimeout(animateLetters, pauseBetweenCycles);
      }, letters.length * letterDelay);
    }
    
    animateLetters();
  });
</script>

<style>
  /* Efecto de alejamiento para el video */
  .video-zoom-out {
    transform: scale(1);
    transition: transform 0.3s ease-in-out;
  }
  
  /* Asegurar que el video mantenga el centrado */
  .video-zoom-out {
    transform-origin: center center;
  }
  
  /* Opcional: Efecto de parallax sutil */
  @media (min-width: 768px) {
    .video-zoom-out:hover {
      transform: scale(1.15);
    }
  }

  /* Animaciones de entrada */
  .hero-title {
    animation: fadeInUp 0.8s ease-out;
  }
  
  .hero-subtitle {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  .hero-buttons {
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Estilo unificado de highlight para todas las pantallas - usando el estilo original de móvil */
  .letter {
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
  }
  
  /* Asegurar contraste mínimo en texto principal */
  .hero-title {
    text-shadow: 
      1px 1px 3px rgba(0, 0, 0, 0.9),
      0 0 10px rgba(0, 0, 0, 0.6);
  }
  
  .hero-subtitle {
    text-shadow: 
      1px 1px 3px rgba(0, 0, 0, 0.9),
      0 0 8px rgba(0, 0, 0, 0.5);
  }

  /* Optimizar composición para desktop */
  @media (min-width: 1024px) {
    .hero-content {
      /* Eliminamos el transform ya que usamos items-start y padding-top */
    }
  }

  /* Ajustar el contenido para que no se sienta pegado al header */
  .hero-content {
    margin-top: 2rem;
  }

  @media (min-width: 640px) {
    .hero-content {
      margin-top: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      margin-top: 4rem;
    }
  }
</style>