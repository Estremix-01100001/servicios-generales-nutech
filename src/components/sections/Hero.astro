import { companyInfo } from '../../database/data';
---

<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden w-full">
  <!-- Video Background - extendido para cubrir el header -->
  <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-blue-900 via-purple-900 to-blue-800 overflow-hidden" style="height: calc(100vh + 80px); top: -80px;">
    <video 
      class="w-full h-full object-cover video-zoom-out" 
      autoplay 
      muted 
      loop 
      playsinline
      preload="metadata"
      poster="https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/favicon.png"
      loading="lazy"
    >
      <source src="/servicios-generales-nutech/video-hersection.mp4" type="video/mp4">
      <source src="https://raw.githubusercontent.com/Estremix-01100001/servicios-generales-nutech/main/public/video-hersection.mp4" type="video/mp4">
      Tu navegador no soporta el elemento de video.
    </video>
  </div>

  <!-- Caja negra superpuesta con z-index - extendida para cubrir el header -->
  <div class="absolute inset-0 w-full h-full bg-black z-10 overflow-hidden" style="height: calc(100vh + 80px); top: -80px; opacity: 0.5;"></div>

  <!-- Degradado hacia la siguiente sección -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white via-white/80 to-transparent z-20"></div>

  <!-- Contenido centrado -->
  <div class="relative z-30 w-full h-full flex items-center justify-center overflow-hidden">
    <div class="text-center w-full max-w-full px-4">
      <!-- Texto Principal -->
        <h1 class="text-4xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight text-white mb-4 md:mb-6">
        <span class="block">Agrega valor a las</span>
        <span class="block">organizaciones</span>
        <span class="block">a través de la</span>
        <span class="relative inline-block animate-text-selection">
          <span class="letter">t</span><span class="letter">r</span><span class="letter">a</span><span class="letter">n</span><span class="letter">s</span><span class="letter">f</span><span class="letter">o</span><span class="letter">r</span><span class="letter">m</span><span class="letter">a</span><span class="letter">c</span><span class="letter">i</span><span class="letter">ó</span><span class="letter">n</span><span class="letter" style="width: 0.3em; display: inline-block;">&nbsp;</span><span class="letter">d</span><span class="letter">i</span><span class="letter">g</span><span class="letter">i</span><span class="letter">t</span><span class="letter">a</span><span class="letter">l</span>
        </span>
      </h1>
      
      <!-- Subtítulo -->
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-white mb-4 md:mb-6 leading-tight max-w-lg mx-auto px-4" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.8), 0 0 6px rgba(0,0,0,0.4);">
        <span class="block">Optimizamos sus Procesos de Negocio,</span>
        <span class="block">con Automatización e Inteligencia Artificial</span>
        <span class="block">de vanguardia</span>
      </p>
      
      <!-- Botones -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <a href="#servicios-detallados" class="w-full sm:w-auto bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-600 font-semibold py-3 px-6 rounded-lg transition-all duration-300 flex items-center justify-center space-x-2">
          <span>Ver servicios</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>

        <a href="#contacto" class="w-full sm:w-auto bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:bg-white hover:text-blue-600 font-semibold py-3 px-6 rounded-lg transition-all duration-300">
          <span>Contacto</span>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const letters = document.querySelectorAll('.letter');
    const letterDelay = 120; // velocidad de animación por letra
    const pauseBetweenCycles = 2000; // pausa entre ciclos
    
    function resetLetters() {
      letters.forEach(letter => {
        letter.style.color = '#ffffff';
        letter.style.transition = 'color 0.2s ease';
      });
    }
    
    function animateLetters() {
      resetLetters();
      
      letters.forEach((letter, index) => {
        setTimeout(() => {
          letter.style.color = '#3B82F6'; // azul Tailwind
        }, index * letterDelay);
      });
      
      // Reiniciar animación después de completar
      setTimeout(() => {
        setTimeout(animateLetters, pauseBetweenCycles);
      }, letters.length * letterDelay);
    }
    
    animateLetters();
  });
</script>

<style>
  /* Efecto de alejamiento para el video */
  .video-zoom-out {
    transform: scale(1);
    transition: transform 0.3s ease-in-out;
  }
  
  /* Asegurar que el video mantenga el centrado */
  .video-zoom-out {
    transform-origin: center center;
  }
  
  /* Opcional: Efecto de parallax sutil */
  @media (min-width: 768px) {
    .video-zoom-out:hover {
      transform: scale(1.15);
    }
  }
</style>