---
import { companyInfo } from '../../database/data';
---

<section id="inicio" class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full">
    <video 
      class="w-full h-full object-cover" 
      autoplay 
      muted 
      loop 
      playsinline
      poster="/src/assets/images/video-poster.svg"
    >
      <source src="/video-hersection.mp4" type="video/mp4">
      Tu navegador no soporta el elemento de video.
    </video>
    <!-- Overlay con efecto de ojo digital -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-transparent to-orange-900/20"></div>
  </div>

  <!-- Logo DIGNITA en esquina superior izquierda -->
  <div class="absolute top-8 left-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <div class="w-4 h-4 bg-gradient-to-br from-blue-500 to-orange-500 rounded-sm"></div>
      </div>
      <span class="text-white text-2xl font-bold">DIGNITA</span>
    </div>
  </div>

  <!-- Content Principal -->
  <div class="relative z-10 container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Texto Principal -->
        <div class="animate-fade-in-up">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-8">
            <span class="text-white">Agrega valor a las</span><br>
            <span class="text-white">organizaciones</span><br>
            <span class="text-white">a través de la</span><br>
            <span class="text-accent-500">transformación digital</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            Dignificamos el Trabajo Humano y Aceleramos tu Éxito<br>
            Empresarial con Tecnología de Vanguardia
          </p>
          
          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#servicios" class="btn-outline text-center flex items-center justify-center space-x-2">
              <span>ver servicios</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
              <span class="text-white text-sm">Contacto</span>
            </div>
          </div>
        </div>

        <!-- Elemento Visual - Ojo Digital -->
        <div class="animate-slide-in-right">
          <div class="relative">
            <!-- Ojo digital con efecto de circuitos -->
            <div class="w-96 h-96 mx-auto relative">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-orange-500/20 rounded-full blur-3xl"></div>
              <div class="relative w-full h-full bg-gradient-to-br from-blue-900/40 to-orange-900/40 rounded-full flex items-center justify-center border border-white/20">
                <!-- Iris con efecto de circuitos -->
                <div class="w-64 h-64 bg-gradient-to-br from-blue-600 to-orange-500 rounded-full relative overflow-hidden">
                  <!-- Líneas de circuitos animadas -->
                  <div class="absolute inset-0 opacity-60">
                    <div class="circuit-line-1"></div>
                    <div class="circuit-line-2"></div>
                    <div class="circuit-line-3"></div>
                  </div>
                  <!-- Pupila -->
                  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16 bg-black rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Logos en la parte inferior -->
  <div class="absolute bottom-8 left-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <div class="w-4 h-4 bg-gradient-to-br from-blue-500 to-orange-500 rounded-sm"></div>
      </div>
      <span class="text-white text-2xl font-bold">DIGNITA</span>
    </div>
  </div>

  <div class="absolute bottom-8 right-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <span class="text-blue-600 font-bold text-sm">NA</span>
      </div>
      <span class="text-white text-lg font-semibold">nutech ACADEMY</span>
    </div>
  </div>
</section>
