---
import { companyInfo } from '../../database/data';
---

<section id="inicio" class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full">
    <video 
      class="w-full h-full object-cover video-enhanced" 
      autoplay 
      muted 
      loop 
      playsinline
      preload="auto"
      poster="/src/assets/images/video-poster.svg"
      style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges;"
    >
      <source src="/video-hersection.mp4" type="video/mp4">
      Tu navegador no soporta el elemento de video.
    </video>
    <!-- Overlay más sutil para mejor contraste -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/10 via-transparent to-orange-900/10"></div>
  </div>

  <!-- Logo DIGNITA en esquina superior izquierda -->
  <div class="absolute top-8 left-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <div class="w-4 h-4 bg-gradient-to-br from-blue-500 to-orange-500 rounded-sm"></div>
      </div>
      <span class="text-white text-2xl font-bold">DIGNITA</span>
    </div>
  </div>

  <!-- Content Principal -->
  <div class="relative z-10 container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Texto Principal -->
        <div class="animate-fade-in-up text-center lg:text-left">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-8">
            <span class="text-white">Agrega valor a las</span><br>
            <span class="text-white">organizaciones</span><br>
            <span class="text-white">a través de la</span><br>
            <span class="text-accent-500">transformación digital</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            Dignificamos el Trabajo Humano y Aceleramos tu Éxito<br>
            Empresarial con Tecnología de Vanguardia
          </p>
          
          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#servicios" class="btn-outline text-center flex items-center justify-center space-x-2">
              <span>ver servicios</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
              <span class="text-white text-sm">Contacto</span>
            </div>
          </div>
        </div>

        <!-- Elemento Visual - Efectos de Luz -->
        <div class="animate-slide-in-right">
          <div class="relative">
            <!-- Efectos de luz y circuitos sin círculo -->
            <div class="w-96 h-96 mx-auto relative">
              <!-- Líneas de circuitos flotantes -->
              <div class="absolute inset-0 opacity-60">
                <div class="circuit-line-1"></div>
                <div class="circuit-line-2"></div>
                <div class="circuit-line-3"></div>
                <div class="circuit-line-4"></div>
                <div class="circuit-line-5"></div>
              </div>
              
              <!-- Puntos de luz dispersos -->
              <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
              <div class="absolute top-3/4 right-1/4 w-3 h-3 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
              <div class="absolute top-1/2 left-1/6 w-1 h-1 bg-blue-300 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
              <div class="absolute bottom-1/4 left-1/3 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
              
              <!-- Efectos de luz radial -->
              <div class="absolute inset-0 bg-gradient-radial from-blue-500/10 via-transparent to-orange-500/10"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Logos en la parte inferior -->
  <div class="absolute bottom-8 left-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <div class="w-4 h-4 bg-gradient-to-br from-blue-500 to-orange-500 rounded-sm"></div>
      </div>
      <span class="text-white text-2xl font-bold">DIGNITA</span>
    </div>
  </div>

  <div class="absolute bottom-8 right-8 z-20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
        <span class="text-blue-600 font-bold text-sm">NA</span>
      </div>
      <span class="text-white text-lg font-semibold">nutech ACADEMY</span>
    </div>
  </div>
</section>

<script>
  // Optimización de calidad de video
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.querySelector('.video-enhanced');
    
    if (video) {
      // Configurar calidad de video
      video.addEventListener('loadedmetadata', function() {
        // Aplicar filtros CSS para mejorar contraste y saturación
        video.style.filter = 'contrast(1.2) brightness(1.1) saturate(1.3)';
        
        // Forzar renderizado de alta calidad
        video.style.imageRendering = '-webkit-optimize-contrast';
        video.style.imageRendering = 'crisp-edges';
        
        // Optimizar para GPU
        video.style.transform = 'translateZ(0)';
        video.style.willChange = 'transform';
      });
      
      // Mejorar calidad en hover
      video.addEventListener('mouseenter', function() {
        video.style.filter = 'contrast(1.3) brightness(1.15) saturate(1.4)';
      });
      
      video.addEventListener('mouseleave', function() {
        video.style.filter = 'contrast(1.2) brightness(1.1) saturate(1.3)';
      });
    }
  });
</script>
