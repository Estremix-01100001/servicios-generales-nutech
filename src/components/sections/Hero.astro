          </svg>
        </a>

        <a href="#servicios-detallados" class="btn btn-secondary w-full max-w-xs sm:w-auto text-lg py-4 px-8 rounded-xl border-2 border-white/80 text-white hover:bg-white/10 flex items-center justify-center space-x-2">
          <span>Ver servicios</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const letters = document.querySelectorAll('.letter');
    const letterDelay = 120; // velocidad de animación por letra
    const pauseBetweenCycles = 2000; // pausa entre ciclos
    
    function resetLetters() {
      letters.forEach(letter => {
        letter.className = 'letter bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent';
        letter.style.transition = 'all 0.3s ease';
      });
    }
    
    function animateLetters() {
      resetLetters();
      
      letters.forEach((letter, index) => {
        setTimeout(() => {
          letter.className = 'letter bg-gradient-to-r from-blue-300 to-blue-500 bg-clip-text text-transparent';
          letter.style.transform = 'scale(1.05)';
          letter.style.filter = 'brightness(1.2)';
        }, index * letterDelay);
      });
      
      // Reiniciar animación después de completar
      setTimeout(() => {
        letters.forEach(letter => {
          letter.style.transform = 'scale(1)';
          letter.style.filter = 'brightness(1)';
        });
        setTimeout(animateLetters, pauseBetweenCycles);
      }, letters.length * letterDelay);
    }
    
    animateLetters();
  });
</script>

<style>
  /* Efecto de alejamiento para el video */
  .video-zoom-out {
    transform: scale(1);
    transition: transform 0.3s ease-in-out;
  }
  
  /* Asegurar que el video mantenga el centrado */
  .video-zoom-out {
    transform-origin: center center;
  }
  
  /* Opcional: Efecto de parallax sutil */
  @media (min-width: 768px) {
    .video-zoom-out:hover {
      transform: scale(1.15);
    }
  }

  /* Animaciones de entrada */
  .hero-title {
    animation: fadeInUp 0.8s ease-out;
  }
  
  .hero-subtitle {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  .hero-buttons {
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

          /* Estilo unificado de highlight para todas las pantallas - usando el estilo original de móvil */
          .letter {
            text-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
          }
          
          /* Animaciones de entrada */
          .fade-in-up {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.6s ease-out forwards;
          }
          
          @keyframes fadeInUp {
            to {
              opacity: 1;
              transform: translateY(0);
            }
          }
          
          /* Estilos de botones mejorados */
          .btn {
            font-family: inherit;
            font-weight: 600;
            font-size: 1rem;
            line-height: 1.5;
            padding: 0.75rem 2rem;
            border-radius: 0.75rem;
            transition: all 0.2s ease;
            cursor: pointer;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
          }
          
          .btn-accent {
            background: linear-gradient(135deg, #f97316, #ea580c);
            color: white;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
          }
          
          .btn-accent:hover {
            background: linear-gradient(135deg, #ea580c, #c2410c);
            transform: translateY(-4px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
          }
          
          .btn-secondary {
            background: transparent;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.8);
          }
          
          .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-4px);
          }
  
  /* Asegurar contraste mínimo en texto principal */
  .hero-title {
    text-shadow: 
      1px 1px 3px rgba(0, 0, 0, 0.9),
      0 0 10px rgba(0, 0, 0, 0.6);
  }
  
  .hero-subtitle {
    text-shadow: 
      1px 1px 3px rgba(0, 0, 0, 0.9),
      0 0 8px rgba(0, 0, 0, 0.5);
  }

  /* Optimizar composición para desktop */
  @media (min-width: 1024px) {
    .hero-content {
      /* Eliminamos el transform ya que usamos items-start y padding-top */
    }
  }

  /* Ajustar el contenido para centrarlo en la parte superior */
  .hero-content {
    margin-top: 0;
    padding-top: 1rem;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding-top: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding-top: 2rem;
    }
  }
</style>