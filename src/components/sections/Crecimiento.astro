---
import ScrollReveal from '../animations/ScrollReveal.tsx';
import CardReveal from '../animations/CardReveal.tsx';
---

<section id="crecimiento" class="py-12 sm:py-16 lg:py-24 bg-gradient-to-b from-white via-accent-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-36 xl:px-44 2xl:px-52">
    <!-- Section Badge -->
    <div class="text-center mb-6 sm:mb-8">
      <div class="group relative inline-flex items-center px-3 py-1.5 sm:px-4 sm:py-2 bg-gradient-to-br from-accent-100 to-accent-200 border-2 border-accent-300 rounded-full shadow-lg hover:shadow-2xl hover:shadow-accent-500/50 transition-all duration-500 hover:scale-110 overflow-hidden cursor-pointer">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
        <span class="relative text-accent-700 text-xs sm:text-sm font-bold group-hover:text-accent-800 transition-colors duration-300">Crecimiento</span>
      </div>
    </div>

    <!-- Section Header -->
    <ScrollReveal direction="up" delay={0} client:visible>
      <div class="text-center mb-8 sm:mb-10 lg:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-secondary-800 mb-4 leading-tight px-4">
          Resultados que impulsan su negocio
        </h2>
      </div>
    </ScrollReveal>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 max-w-xs md:max-w-none mx-auto items-stretch">
      <!-- Card 1: Reducción de Costos -->
      <CardReveal index={0} hueA={220} hueB={250} client:visible>
      <div class="group relative bg-gradient-to-br from-white to-accent-50 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 border-2 border-transparent hover:border-accent-200 h-full flex flex-col">
        <!-- Efecto de brillo animado -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent-200/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 z-10"></div>
        
        <div class="w-full h-48 sm:h-56 overflow-hidden">
          <picture>
            <source srcset={`${import.meta.env.BASE_URL}images/analisis-datos.webp`} type="image/webp">
            <img 
              src={`${import.meta.env.BASE_URL}images/analisis-datos.jpg`} 
              alt="Análisis de datos y reducción de costos empresariales con automatización robótica de procesos RPA" 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" 
              loading="lazy"
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
            />
          </picture>
        </div>
        <div class="relative p-3 sm:p-6 flex flex-col flex-grow">
          <h3 class="text-lg sm:text-xl font-bold text-secondary-800 mb-2 text-center group-hover:text-accent-700 transition-colors duration-300">
            Reducción de Costos
          </h3>
          <p class="text-sm sm:text-base text-secondary-600 leading-relaxed text-center flex-grow">
            Optimice recursos y reduzca gastos operativos
          </p>
        </div>
      </div>
      </CardReveal>

      <!-- Card 2: Aumento de Productividad -->
      <CardReveal index={1} hueA={210} hueB={240} client:visible>
      <div class="group relative bg-gradient-to-br from-white to-accent-50 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 border-2 border-transparent hover:border-accent-200 h-full flex flex-col">
        <!-- Efecto de brillo animado -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent-200/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 z-10"></div>
        
        <div class="w-full h-48 sm:h-56 overflow-hidden">
          <picture>
            <source srcset={`${import.meta.env.BASE_URL}images/capacitacion-ejecutiva.webp`} type="image/webp">
            <img src={`${import.meta.env.BASE_URL}images/capacitacion-ejecutiva.jpg`} alt="Capacitación ejecutiva y aumento de productividad empresarial con tecnologías de automatización" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
          </picture>
        </div>
        <div class="relative p-3 sm:p-6 flex flex-col flex-grow">
          <h3 class="text-lg sm:text-xl font-bold text-secondary-800 mb-2 text-center group-hover:text-accent-700 transition-colors duration-300">
            Mayor Productividad
          </h3>
          <p class="text-sm sm:text-base text-secondary-600 leading-relaxed text-center flex-grow">
            Incremente la eficiencia de su equipo
          </p>
        </div>
      </div>
      </CardReveal>

      <!-- Card 3: Escalabilidad -->
      <CardReveal index={2} hueA={200} hueB={230} client:visible>
      <div class="group relative bg-gradient-to-br from-white to-accent-50 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 border-2 border-transparent hover:border-accent-200 h-full flex flex-col">
        <!-- Efecto de brillo animado -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent-200/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 z-10"></div>
        
        <div class="w-full h-48 sm:h-56 overflow-hidden">
          <picture>
            <source srcset={`${import.meta.env.BASE_URL}images/desarrollo-web-mobile.webp`} type="image/webp">
            <img src={`${import.meta.env.BASE_URL}images/desarrollo-web-mobile.jpg`} alt="Desarrollo web y móvil para escalabilidad empresarial y transformación digital" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
          </picture>
        </div>
        <div class="relative p-3 sm:p-6 flex flex-col flex-grow">
          <h3 class="text-lg sm:text-xl font-bold text-secondary-800 mb-2 text-center group-hover:text-accent-700 transition-colors duration-300">
            Escalabilidad
          </h3>
          <p class="text-sm sm:text-base text-secondary-600 leading-relaxed text-center flex-grow">
            Soluciones que crecen con su empresa
          </p>
        </div>
      </div>
      </CardReveal>
    </div>

    <!-- CTA Section - Eliminado para evitar redundancia -->
  </div>
</section>
